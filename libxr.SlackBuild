#!/bin/sh -e

CWD=`pwd`
VERSION=1.0
ARCH=${ARCH:-i486}
BUILD=1

rm -rf libxr-$VERSION
tar xzvf libxr-$VERSION.tar.gz
cd libxr-$VERSION
./configure --sysconfdir=/etc --prefix=/usr --mandir=/usr/man
make
make install DESTDIR=$CWD/slack-pkg
gzip -9 $CWD/slack-pkg/usr/man/man?/*.?
cd $CWD/slack-pkg
makepkg -l y -c n $CWD/libxr-$VERSION-$ARCH-$BUILD.tgz
cd $CWD
rm -rf libxr-$VERSION slack-pkg
